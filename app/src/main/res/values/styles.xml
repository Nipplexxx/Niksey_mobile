<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:clickable">true</item>
        <item name="background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_10</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_10</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/head</item>
    </style>

    <style name="actionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/white_100</item>
        <item name="actionMenuTextColor">@color/black_80</item>
    </style>

    <style name="style_constratint_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/colorMain</item>
    </style>

    <style name="style_edit_text" parent="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autofillHints" tools:targetApi="o"></item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_80</item>
        <item name="minHeight">48dp</item>
        <item name="android:backgroundTint">@color/material_default</item>
    </style>

    <style name="style_input_code" parent="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:autofillHints" tools:targetApi="o"></item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType"></item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="style_photo_profil">
        <item name="android:layout_width">@dimen/settings_user_photo_width</item>
        <item name="android:layout_height">@dimen/settings_btn_change_photo_height</item>
        <item name="android:background">@color/white_100</item>
    </style>

    <style name="style_pinView" parent="PinWidget.PinView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:elevation">15dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">@color/black_100</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>