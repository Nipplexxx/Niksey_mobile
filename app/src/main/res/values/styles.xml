<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settingsButtons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:clickable">true</item>
        <item name="background">@drawable/ripple_effect</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginTop">@dimen/vertical_large_margin</item>
        <item name="android:textSize">@dimen/normalText</item>
    </style>

    <style name="smallText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#A3AAB0</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:textSize">@dimen/smallText</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#B5BCC2</item>
        <item name="android:layout_marginTop">@dimen/app_small_margin</item>
        <item name="android:layout_marginStart">@dimen/app_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_margin</item>
    </style>

    <style name="mainToolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@drawable/head</item>
    </style>

    <style name="actionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>
</resources>