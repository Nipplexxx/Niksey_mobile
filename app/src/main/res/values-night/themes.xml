<resources>
    <!-- Base application theme. -->
    <style name="Theme.LotlinMessenger" parent="MaterialDrawerTheme.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@drawable/head</item>
        <!-- Primary color profile picture -->
        <item name="colorPrimaryVariant">@color/purple_0</item>
        <item name="colorOnPrimary">@color/black_80</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_100</item>
        <item name="colorSecondaryVariant">@color/purple_100</item>
        <item name="colorOnSecondary">@color/black_80</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorPrimaryDark">@drawable/head</item>
        <item name="popupTheme">@style/actionMenu</item>
    </style>
</resources>